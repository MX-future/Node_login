<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        html,body{
            margin: 0;
        }
        html{
            background: url("images/timg.jpeg") repeat fixed;
        }
        .register{
            margin: 0 auto;
            margin-top: 200px;
            width: 500px;
            height: 350px;
            border-radius: 10px;
            background: url('images/bg.jpg');
            padding-top: 10px;
        }
        h2{
            margin-left: 50px;
            margin-left: 180px;
        }
        input{
            width: 180px;
            height: 30px;
            border-radius: 7px;
            outline: none;
            border: 1px solid #00B7FF;
            padding-left: 8px;
        }
        .name,.password{
            width: 400px;
            height: 40px;
            margin-left: 120px;
            margin-top: 10px;
        }
        .confirm{
            width: 400px;
            height: 40px;
            margin-left: 88px;
            margin-top: 10px;
        }
        button{
            width: 240px;
            height: 40px;
            border-radius: 11px;
            margin-left: 125px;
            margin-top: 20px;
            background: lightskyblue;
            outline: none;
            border: none;
        }
    </style>
</head>
<body>
<div class="register">
    <form method="post" action="/register" id="form">
        <h2>注册新用户</h2>
        <div class="name">
            <label>昵称: </label><input type="text" name="username" id="name" /><br/>
        </div>
        <div class="password">
            <label>密码: </label><input type="password" name="password" id="password" onfocus="CheckName()" /><br/>
        </div>
        <div class="confirm">
            <label>确认密码: </label><input type="password" name="password-confirm" id="password-confirm" onfocus="CheckLength()" /><br/>
        </div>
        <button onclick="CheckPassword()">注册</button>
    </form>
</div>
<script>
    function CheckName(){
        var username = document.getElementById("name");
        if(username.value==""){
            alert("昵称不能为空！");
            //昵称输入框获得焦点
            username.select();
        }

    }
    function CheckLength(){
        var password = document.getElementById("password");
        if(password.value.length<6){
            alert("密码长度必须大于六位!");
            //获得焦点
            password.select();
        }
    }
    function CheckPassword(){
        var password = document.getElementById("password").value;
        var password_confirm = document.getElementById("password-confirm").value;
        var form = document.getElementById("form");
        if((password==""||(password_confirm==""))){
            alert("请输入密码!");
        }else{
            if(password!=password_confirm){
                alert("前后两次密码不一致!");
                //阻止默认浏览器默认事件，防止表单继续提交
                event.preventDefault();
            }else{
                form.submit();
            }
        }
    }
</script>
</body>
</html>